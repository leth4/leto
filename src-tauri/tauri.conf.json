{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../web",
    "distDir": "../web",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "leto",
    "version": "1.2.0"
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "readText": true
      },
      "window" : {
        "all" : true
      },
      "dialog" : {
        "open" : true,
        "save" : true,
        "message": true
      },
      "path": {
        "all" : true
      },
      "fs": {
        "exists": true,
        "readFile": true,
        "readDir": true,
        "writeFile": true,
        "removeFile": true,
        "createDir" : true,
        "removeDir": true,
        "scope":["**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "leto",
      "longDescription": "Minimalistic text editor",
      "resources": [],
      "shortDescription": "Minimalistic text editor",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "leto",
        "width": 950,
        "fileDropEnabled" : false,
        "center" : true,
        "focus": true,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
